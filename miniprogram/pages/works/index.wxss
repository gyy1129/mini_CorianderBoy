.search {
  position: fixed;
  right: 20rpx;
  top: 15rpx;
  display: flex;
  width: 95%;
  height: 60rpx;
  background-color: rgb(236, 236, 236);
  border-radius: 35rpx;
}

.search .search-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.search .search-content .icon-sousuo {
  margin: auto 18rpx;
  font-size: 28rpx;
  color: #415a37;
}

.search .search-content input {
  margin: auto 5rpx;
  width: 80%;
  font-size: 28rpx;
}

.search .search-content image {
  width: 35rpx;
  height: 35rpx;
  margin: auto 17rpx;
}

.datetime {
  position: fixed;
  display: flex;
  top: 90rpx;
  right: 18rpx;
  width: 560rpx;
  height: 60rpx;
  background-color: rgb(236, 236, 236);
  border-radius: 15rpx;
  /* border: 1px solid #c2ceb9; */
}

.datetime .label {
  margin-left: 90rpx;
  margin-top: 12rpx;
  color: #8a8a8a;
  font-size: 26rpx;
}

.datetime .label {
  width: 225rpx;
  margin-left: 55rpx;
  margin-top: 13rpx;
  color: #8a8a8a;
  font-size: 24rpx;
}

.datetime .time {
  width: 165rpx;
  margin-top: 13rpx;
  color: #8a8a8a;
  font-size: 24rpx;
}

.datetime .canselTime {
  width: 60rpx;
}

.datetime .canselTime .icon-quxiao {
  font-size: 30rpx;
  color: #8a8a8a;
}

.datetime .searchTime {
  width: 65rpx;
}

.datetime .searchTime .icon-sousuo {
  font-size: 30rpx;
  color: #8a8a8a;
}

.line {
  position: fixed;
  top: 80rpx;
  width: 100%;
  height: 2rpx;
  background: rgb(229, 230, 229);
}

.sidebar {
  position: fixed;
  left: 0;
  top: 90rpx;
  display: flex;
  flex-direction: column;
  float: left;
  width: 162rpx;
  height: calc(100vh - 90rpx);
  background-color: rgb(236, 236, 236);
  border-radius: 10rpx;
  box-shadow: 0 3rpx 7rpx 0 rgba(230, 230, 230, 0.5);
  overflow: hidden;
}

.sidebar .item {
  height: 75rpx;
  float: left;
  border-bottom: 1px solid #f8f8f8;
}

.sidebar .item text {
  line-height: 76rpx;
  font-size: 25rpx;
  color: #8a8a8a;
  font-weight: 500;
  margin-left: 5rpx;
}

.sidebar .item .iconfont {
  margin-left: 20rpx;
  font-size: 30rpx;
}

.content {
  position: fixed;
  top: 160rpx;
  right: 18rpx;
  display: flex;
  flex-direction: column;
  float: right;
  width: 560rpx;
  height: calc(100vh - 160rpx);
}

.content .item {
  margin-bottom: 16rpx;
  background-color: rgb(236, 236, 236);
  border-radius: 10rpx;
  box-shadow: 0 3rpx 7rpx 0 rgba(230, 230, 230, 0.5);
}

.content .item image {
  width: 250rpx;
  height: 250rpx;
  margin-left: 20rpx;
  margin-top: 15rpx;
  object-fit: cover;
  border-radius: 10rpx;
}

.content .item .introduction {
  width: 450rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #607552;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.content .item .content-footer {
  display: flex;
  align-items: center;
  flex-direction: row;
  margin: 8rpx 0 5rpx 20rpx;
  width: 520rpx;
  color: #8fa780;
}

.content .item .content-footer .time {
  font-size: 22rpx;
}

.content .item .content-footer .like {
  display: inline-flex;
  align-items: center;
}

.content .item .content-footer .like text {
  position: relative;
  margin-left: 10rpx;
  font-size: 18rpx;
}

.content .item .content-footer .like .iconfont {
  margin-left: 250rpx;
  font-size: 30rpx;
}

.content .item .content-footer .collect {
  margin-left: 20rpx;
  font-size: 30rpx;
}

.noData {
  font-size: 24rpx;
  color: #7e9171;
  margin-top: 40rpx;
}