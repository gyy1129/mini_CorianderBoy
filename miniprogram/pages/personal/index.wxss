.userCenter_wrap {
  position: relative;
}

.userCenter_top {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  margin: 30rpx 27rpx 36rpx 40rpx;
  overflow: hidden;
}

.name {
  display: flex;
  font-size: 34rpx;
  font-weight: 500;
  color: #4a6152;
  width: 480rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 60rpx;
}
.signature{
  display: flex;
  width: 480rpx;
  margin-top: 5rpx;
  font-size: 25rpx;
  color: #4a6152;
}

.userCenter_top .iconfont{
      float: right;
}
.list {
  width: 686rpx;
  background-color: #fff;
  margin: 25rpx auto;
  border-radius: 20rpx;
  box-shadow: 0 3rpx 7rpx 0 rgba(230, 230, 230, 0.5);
  overflow: hidden;
}

.list .item {
  width: 630rpx;
  height: 96rpx;
  float: right;
  margin: auto 25rpx;
  border-bottom: 1px solid #EEEEEE;
  background-size: auto 25%;
}

.list .item image {
  width: 26rpx;
  height: 26rpx;
  margin-top: 38rpx;
  margin-left: 2rpx;
}

.list .item text {
  font-size: 28rpx;
  font-weight: 500;
  color: #607552;
  line-height: 40rpx;
  margin-left: 20rpx;
}

.list .item .icon-arrow-right {
  float: right;
  margin-top: 30rpx;
  margin-right: 30rpx;
  color: #3d7e4d;
}