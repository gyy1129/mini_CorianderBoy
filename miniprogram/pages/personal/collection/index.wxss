.top {
  position: fixed;
  top: 35rpx;
  right: 25rpx;
  font-size: 25rpx;
  color: #44584b;
}

.line {
  position: fixed;
  top: 75rpx;
  width: 100%;
  height: 2rpx;
  background: rgb(229, 230, 229);
}

.list {
  display: inline-block;
  flex-direction: column;
  position: fixed;
  top: 80rpx;
  margin: 10rpx 42rpx;
  height: calc(100vh - 80rpx);
  /* overflow: hidden; */
}

.list .item {
  top: 0;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  background-color: #e4e9e0;
  width: 665rpx;
  height: 265rpx;
}

.list .title {
  display: inline-block;
  margin: 18rpx 28rpx;
  font-size: 45rpx;
  color: #44584b;
}

.list .time {
  display: block;
  margin: 0 32rpx;
  font-size: 22rpx;
  color: #a6a7a6;
}

.list .content {
  margin: 12rpx 28rpx;
  font-size: 25rpx;
  color: #44584b;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}